<%- include('../partials/header') %>

<div class="container">
    <% blogs.forEach((blog) => { %>
        <div class="row align-items-center blog-container">
            <div class="col-md-10">
                <h2><%= blog.title %></h2>
                <p><%= blog.date.toLocaleDateString() %> </p>
            </div>
            <div class="col-md-2">
                <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read</a>
            </div>
        </div>
    <% }) %>
</div>

<%- include('../partials/footer') %>