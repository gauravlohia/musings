<%- include('../partials/header') %> 

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4"><%= blog.title %> </h1>
        <p>Last Updated: <%= blog.date.toLocaleDateString() %> (<%= blog.date.toLocaleTimeString() %> )</p>
    </div>
    
    <div class="card">
        <img src="<%= blog.image %>" class="card-img-top">
        <div class="card-body">
          <p class="card-text"><%= blog.content %></p>
          <a href="/blogs/<%= blog._id %>/edit" class="btn btn-primary">Edit</a>
          <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
</div>

<%- include('../partials/footer') %> 