<%- include("../partials/header")%>
    
<div class="container">
    <form>
        <div class="form-group">
            <label for="blogTitle">Blog Title</label>
            <input type="text" class="form-control" id="blogTitle" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="form-group">
            <label for="blogImage">Image URL</label>
            <input type="url" class="form-control" id="blogImage" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="form-group">
            <label for="blogText">Content</label>
            <textarea class="form-control" name="blog[content]" id="blogText" rows="10" required><%= blog.content %></textarea>
        </div>
        <button class="btn btn-primary">Save Changes</button>
    </form>
</div>

<%- include("../partials/footer")%>